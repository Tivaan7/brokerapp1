<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Transparent fill so your dark background shows through -->
    <solid android:color="@android:color/transparent"/>

    <!-- Thin silver border -->
    <stroke
        android:width="1dp"
        android:color="@color/silver"/>

    <!-- Rounded corners -->
    <corners android:radius="12dp"/>

    <!-- Optional inner spacing if you apply this directly to the TextView -->
    <padding
        android:left="12dp"
        android:top="12dp"
        android:right="12dp"
        android:bottom="12dp"/>
</shape>
