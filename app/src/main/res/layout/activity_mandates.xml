<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_background"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal">

        <!-- Title -->
        <TextView
            android:text="Tivaan's Mandates"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp" />

        <!-- Filter: Property Type -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/fake_filter_background"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="12dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:text="Type"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_down"
                android:contentDescription="Dropdown Arrow"/>
        </LinearLayout>
        <!-- Filter: Property Type -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/fake_filter_background"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="12dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:text="Status"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_down"
                android:contentDescription="Dropdown Arrow"/>
        </LinearLayout>
        <!-- Filter: Property Type -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/fake_filter_background"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="12dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:text="Price"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_down"
                android:contentDescription="Dropdown Arrow"/>
        </LinearLayout>

        <!-- Filter: Signed -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/fake_filter_background"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="12dp"
            android:layout_marginBottom="24dp">

            <TextView
                android:text="Signed"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_down"
                android:contentDescription="Dropdown Arrow"/>
        </LinearLayout>

        <!-- Mandate Card 1 -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_background"
            android:padding="16dp"
            android:layout_marginBottom="20dp">

            <!-- Property Image -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:scaleType="centerCrop"
                android:src="@drawable/sandton"
                android:contentDescription="Property Image"
                android:layout_marginBottom="12dp" />

            <!-- Property Title -->
            <TextView
                android:text="123 Main St, Sandton"
                android:textColor="@color/silver"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp" />

            <!-- Property Details -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Type -->
                <TextView
                    android:text="Type: For Sale"
                    android:background="@drawable/card_background"
                    android:padding="8dp"
                    android:textSize="15dp"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp" />

                <!-- Status -->
                <TextView
                    android:text="Status: For Sale"
                    android:background="@drawable/card_background"
                    android:padding="8dp"
                    android:textSize="15dp"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp" />

                <!-- Price -->
                <TextView
                    android:text="Price: R2,500,000"
                    android:background="@drawable/card_background"
                    android:padding="8dp"
                    android:textSize="15dp"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp" />

                <!-- Signed -->
                <TextView
                    android:text="Signed: Yes"
                    android:background="@drawable/card_background"
                    android:padding="8dp"
                    android:textColor="@color/white"
                    android:textSize="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

        <!-- Mandate Card 2 -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_background"
            android:padding="16dp"
            android:layout_marginBottom="20dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:scaleType="centerCrop"
                android:src="@drawable/parklane"
                android:contentDescription="Property Image"
                android:layout_marginBottom="12dp" />

            <TextView
                android:text="45 Park Lane, Sandton"
                android:textColor="@color/silver"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Type: For Sale"
                    android:textSize="15dp"
                    android:background="@drawable/card_background"
                    android:padding="8dp"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp" />

                <TextView
                    android:text="Status: For Sale"
                    android:background="@drawable/card_background"
                    android:padding="8dp"
                    android:textSize="15dp"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp" />

                <TextView
                    android:text="Price: R3,100,000"
                    android:background="@drawable/card_background"
                    android:padding="8dp"
                    android:textSize="15dp"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp" />

                <TextView
                    android:text="Signed: No"
                    android:background="@drawable/card_background"
                    android:padding="8dp"
                    android:textSize="15dp"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

        <!-- Mandate Card 3 -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_background"
            android:padding="16dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:scaleType="centerCrop"
                android:src="@drawable/oak"
                android:contentDescription="Property Image"
                android:layout_marginBottom="12dp" />

            <TextView
                android:text="78 Oak Ave, Sandton"
                android:textColor="@color/silver"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Type: For Sale"
                    android:background="@drawable/card_background"
                    android:padding="8dp"
                    android:textSize="15dp"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp" />

                <TextView
                    android:text="Status: For Sale"
                    android:background="@drawable/card_background"
                    android:padding="8dp"
                    android:textSize="15dp"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp" />

                <TextView
                    android:text="Price: R4,200,000"
                    android:background="@drawable/card_background"
                    android:padding="8dp"
                    android:textSize="15dp"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp" />

                <TextView
                    android:text="Signed: Yes"
                    android:background="@drawable/card_background"
                    android:padding="8dp"
                    android:textSize="15dp"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
